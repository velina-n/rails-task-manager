<h1>Nouvelle tâche</h1>

<%= form_with model: @task, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :details %>
    <%= f.text_area :details %>
  </div>
  <div>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
  <%= f.submit "Créer" %>
<% end %>
<%= link_to "Retour à la liste", tasks_path %>
